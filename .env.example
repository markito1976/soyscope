# SoyScope API Keys
# Copy this to .env and fill in your keys

# Claude (Anthropic) - Required for AI enrichment
ANTHROPIC_API_KEY=sk-ant-...

# EXA - Neural semantic search
EXA_API_KEY=...

# Tavily - Web/news search
TAVILY_API_KEY=tvly-...

# Semantic Scholar - Free API key (optional, higher rate limits)
SEMANTIC_SCHOLAR_API_KEY=...

# PubMed/Entrez - Free API key
PUBMED_API_KEY=...
PUBMED_EMAIL=your@email.com

# CORE - Full-text open access
CORE_API_KEY=...

# Unpaywall - Just needs email
UNPAYWALL_EMAIL=your@email.com

# OpenAlex - Just needs email for polite pool
OPENALEX_EMAIL=your@email.com

# Crossref - Just needs email for polite pool
CROSSREF_EMAIL=your@email.com

# Database
SOYSCOPE_DB_PATH=data/soyscope.db

# Cache
SOYSCOPE_CACHE_DIR=cache

# Logging
SOYSCOPE_LOG_LEVEL=INFO
